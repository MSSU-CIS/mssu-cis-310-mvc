<Window x:Class="SeventhGUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SeventhGUI"
        mc:Ignorable="d"
        Title="Lifetime Baseball Statistics - Main Menu" Height="375" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Button Content="Batting" Grid.Row="0" />
        <Button Content="Pitching" Grid.Row="1" />
        <Button Content="Managing" Grid.Row="2" />
        <Button Content="Quit" Grid.Row="3" Click="Quit_Button_Click" />
    </Grid>
</Window>
